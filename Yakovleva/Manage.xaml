<Window x:Class="Yakovleva.Manage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yakovleva"
        mc:Ignorable="d"
        Title="Управление сотрудниками" SizeToContent="WidthAndHeight">
    <Grid>
       
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <DataGrid x:Name="EmployeesGrid" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CanUserAddRows="False" Height="170"/>
            <Button Content="Уволить сотрудника" HorizontalAlignment="Center" Margin="10" Height="30" Width="200"  Foreground="#DE83FF" BorderBrush="#DE83FF" Background="#f4e7ff"/>
            <Button Content="Добавить сотрудника" HorizontalAlignment="Center" Margin="10" Height="30" Width="200"  Foreground="#DE83FF" BorderBrush="#DE83FF" Background="#f4e7ff"/>
        </StackPanel>

    </Grid>
</Window>
